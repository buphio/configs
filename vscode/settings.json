{
    // --- editor ---
    "editor.fontFamily": "'JetBrains Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.bracketPairColorization.enabled": false,
    "editor.minimap.enabled": false,
    "editor.rulers": [90],
    "editor.lineNumbers": "relative",
    "editor.cursorSurroundingLines": 8,
    // --- terminal ---
    "terminal.integrated.fontSize": 16,
    // --- workbench ---
    "workbench.activityBar.visible": false,
    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        "[quietLight-plus-theme]": {
            "statusBar.background": "#26517b",
            "editor.lineHighlightBackground": "#ececec"
        },
        "[Default Dark+]": {
            "statusBar.background": "#2d363d",
        },
        "[Darcula Theme from IntelliJ]": {
            "statusBar.background": "#2d363d",
            "editorLineNumber.activeForeground": "#d69a00"
        }
    },
    // --- misc ---
    "breadcrumbs.icons": false,
    "explorer.confirmDelete": false,
    "git.enabled": false,
    "telemetry.telemetryLevel": "off",
    "window.commandCenter": true,
    "workbench.colorTheme": "quietLight-plus-theme",
}